# Example environment configuration
# Copy this file to .env and customize as needed

# Backend Configuration
# BACKEND_PORT=8000
# DATABASE_URL=postgresql://user:password@localhost/dbname
# EMAIL_SERVICE_API_KEY=your-email-service-key

# Admin Panel Authentication
# IMPORTANT: Change these credentials in production!
VITE_ADMIN_API_URL=http://localhost:8000
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-in-production

# LiteLLM Configuration
LITELLM_BASE_URL=http://localhost:4000
LITELLM_API_KEY=your-litellm-api-key

# SMTP Configuration
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-username
# SMTP_PASSWORD=your-smtp-password
# SMTP_FROM=noreply@example.com
# SMTP_USE_TLS=false         # Use direct TLS connection (typically for port 465)
# SMTP_START_TLS=true        # Use STARTTLS to upgrade connection (typically for port 587)

KUBERNETES_NAMESPACE="ai"

# Database Configuration (for LiteLLM)
DATABASE_URL=postgresql://llmproxy:dbpassword9090@db:5432/litellm

# LLM Provider API Keys (configure the ones you want to use)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
GEMINI_API_KEY=your-google-gemini-api-key
TOGETHER_API_KEY=your-together-ai-api-key
MISTRAL_API_KEY=your-mistral-api-key
XAI_API_KEY=your-xai-api-key
COHERE_API_KEY=your-cohere-api-key

# Frontend Configuration
VITE_API_URL=http://localhost:8000